<%-
  groups = OodSupport::User.new.groups.sort_by(&:id).tap { |groups|
    groups.unshift(groups.delete(OodSupport::Process.group))
  }.map(&:name).grep(/.*[0-9]{5}/)
-%>
---
cluster: "my-k8s-cluster"
title: "Virtual Desktop"
description: |
  This app will launch a Virtual Desktop
attributes:
  bc_vnc_resolution:
    required: true
  account:
    label: Project Code
    widget: select
    options: <%- groups.each do |group| %> - "<%= group %>" <%- end %>
    required: true
  bc_num_hours:
    max: 24
    min: 1
    step: 1
    value: 1
    widget: number_field
  num_cores:
    label: Number of cores
    max: 4
    min: 1
    value: 2
    widget: number_field
  num_mem:
    label: Memory per job (GB)
    max: 32
    min: 2
    step: 1
    value: 2
    widget: number_field
  ansysver:
    widget: select
    label: "ANSYS Version"
    value: "2025R1"
    required: true
    options:
      - "19.2"
      - "2019R3"
      - "2020R1"
      - "2020R2"
      - "2021R2"
      - "2022R1"
      - "2022R2"
      - "2023R1"
      - "2023R2"
      - "2024R2"
      - "2025R1"
form:
  - account
  - bc_vnc_resolution
  - bc_num_hours
  - num_cores
  - num_mem
  - ansysver
